{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build && NODE_ENV=local npm run watch",
    "build": "npm run build-ts",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "jest": {
    "mapCoverage": true,
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.8",
    "@types/connect-mongo": "0.0.32",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.0",
    "@types/express-session": "0.0.32",
    "@types/gridfs-stream": "^0.5.29",
    "@types/moment-timezone": "^0.2.34",
    "@types/mongoose": "^4.7.29",
    "async": "^2.1.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "concurrently": "^3.5.1",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "errorhandler": "^1.4.3",
    "expect": "^1.20.2",
    "express": "~4.15.2",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^3.1.3",
    "lusca": "^1.4.1",
    "mongoose": "4.10.8",
    "monk": "^6.0.1",
    "morgan": "^1.8.2",
    "nodemon": "^1.14.11",
    "passport": "0.3.2",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "@types/connect-mongo": "0.0.32",
    "@types/debug": "0.0.29",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/expect": "^1.20.1",
    "@types/express": "^4.0.36",
    "@types/jest": "^19.2.2",
    "@types/lodash": "^4.14.63",
    "@types/mongodb": "^2.1.43",
    "@types/node": "^7.0.12",
    "@types/passport-facebook": "^2.1.3",
    "concurrently": "^3.4.0",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.7",
    "ts-jest": "^20.0.6",
    "tslint": "^5.0.0"
  }
}
